<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ca.nkrishnaswamy.picshare">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PicShare">
        <activity android:name="ca.nkrishnaswamy.picshare.ui.activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="ca.nkrishnaswamy.picshare.ui.activities.SignUpActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="ca.nkrishnaswamy.picshare.ui.activities.EnterEmailActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="ca.nkrishnaswamy.picshare.ui.activities.ResetPasswordActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="ca.nkrishnaswamy.picshare.ui.activities.EnterNamePasswordActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="ca.nkrishnaswamy.picshare.ui.activities.WelcomeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="ca.nkrishnaswamy.picshare.ui.activities.AddProfilePhotoActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="ca.nkrishnaswamy.picshare.ui.activities.ConfirmPhotoActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="ca.nkrishnaswamy.picshare.ui.activities.SearchAccountsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="ca.nkrishnaswamy.picshare.ui.activities.LoginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="ca.nkrishnaswamy.picshare.ui.activities.FindAccountActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="ca.nkrishnaswamy.picshare.ui.activities.PickUsernameActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="ca.nkrishnaswamy.picshare.ui.activities.EditProfileActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="ca.nkrishnaswamy.picshare.ui.activities.NewPostActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="ca.nkrishnaswamy.picshare.ui.activities.UserPostViewActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="ca.nkrishnaswamy.picshare.ui.activities.ProfileSearchResultActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>